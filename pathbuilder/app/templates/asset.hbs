<div class='asset standard' {{bind-attr id=assetIdString}}>
  <div class='controls'>
    <div class='asset-type asset-control'>
      {{value.assetType}}
    </div>
    <div class='asset-details asset-control'>
      <img class='edit-asset-image asset-control-icon' src='/dummy.svg'/>
      <div class='text'>
        Details
      </div>
    </div>
    <div class='asset-delete asset-control'>
      <img class='detele-asset-image asset-control-icon' src='/dummy.svg'/>
    </div>
  </div>
  <div class='asset-title'>
    {{toggle-edit-text-field value=title action="saveAsset"}}
  </div>
  <div class='asset-description'>
    {{toggle-edit-textarea value=description action="saveAsset"}}
  </div>
  {{#with value as value}}
    {{partial value.assetBodyTemplate}}
  {{/with}}
</div>
