<div class='standard-module-view inner-module-view'>
  {{#if multipleAssets}}
    {{#draggable-object content=firstAsset}}
      {{render 'asset' firstAsset}}
    {{/draggable-object}}
    {{#each asset in restAssets}}
      {{#draggable-object-target action='reinsertAsset' before=asset}}
        <div class='text'>
          ADD CONTENT HERE
        </div>
      {{/draggable-object-target}}
      {{#draggable-object content=asset}}
        {{render 'asset' asset}}
      {{/draggable-object}}
    {{/each}}
  {{else}}
    {{#if firstAsset}}
      {{render 'asset' firstAsset}}
    {{/if}}
  {{/if}}
</div>
