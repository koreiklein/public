<div class='expandable'>
  <div class='expandable-heading'>
    {{#link-to "learning_path.learning_module" learningModule.id}}
      {{learningModule.title}}
    {{/link-to}}
    <img {{action 'toggleExpand'}} {{bind-attr class=expandedClass}} {{bind-attr src=arrowImageSrc}}/>
  </div>
  {{#if expanded}}
    {{#each asset in learningModule.assets}}
      <a class='asset-link'>
       {{asset.title}}
      </a>
    {{/each}}
    <a {{action 'addContentToModule' learningModule}} class='add-content to-module'>
      + Add More Content
    </a>
  {{/if}}
</div>
